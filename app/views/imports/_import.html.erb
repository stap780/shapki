<%= turbo_frame_tag  dom_id(import), class: "card mb-1", data: { }  do %>
  <div class="row justify-content-between align-items-center px-2 py-2">
    <%= tag.div(import.id, class: "col-1 text-center")%>
    <%= tag.div(import.title, class: "col-4")%>
    <%= tag.div(class: "col-2") do %>
      <%= "Link: #{import.link}" %>
      <%= "File: #{import.file}" if import.file.attached?%>
    <% end %>
    <div class= "col d-flex justify-content-end gap-2 align-items-center" id="<%= dom_id(import, :buttons)%>" >     
 
      <%= link_to arrow_right_icon, run_imports_path(import), title: "Run", data: { "turbo-method": :post, 'turbo-confirm': 'Run' }, class:"btn btn-sm btn-outline-secondary" %>

      <%= link_to edit_icon, [:edit, import], class: '' %>
      <%= link_to trash_icon, [import], data: { "turbo-method": :delete, 'turbo-confirm': 'Are you sure?' }, class:"" %>
    </div>
  </div>
<% end %>